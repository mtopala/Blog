
<% include ../partials/head %>
<% include ../partials/header %>

<form action="/articles/article-form" method="POST">
  <div class="row" style="width: 500px; margin: 0 30%;">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="title" id="title" for='title'>
    </div>
    <div class="form-group">
        <label for='title'>Categorie</label>
         <select class="category" data-style="btn-info" name="category">
            <% categoriesList.forEach(function(category) { %>
            <option name="category" value="<%= category.id %>"><%= category.name %></option>
             <% }); %>
         </select>
    </div>
    <div class="form-group">
        <label for="content">Descriere</label>
        <textarea class="form-control" name='content' id="content" rows="3"></textarea>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
    
  </form>

  <% include ../partials/footer %>