<% include ../partials/head %>
<% include ../partials/header %>
<% articleList.forEach( (article, index, array ) =>  { %>
  <% for(let i=0; i<article.Articles.length; i++) {%>
  <div class="container" style="margin-top: 50px">
        <div class="row">
          <!-- Post Content Column -->
          <div class="col-lg-8">
    
            <!-- Title -->
            <h1 class="mt-4"><a href="/articles/<%= article.Articles[i].id %>" > <%= article.Articles[i].title %> </a> </h1>
            <!-- Author -->
            <p class="lead">
              by
                 <a href="#"><%= article.Articles[i].User.username %></a>
            </p>
    
            <hr>
    
            <!-- Date/Time -->
            <p><%= article.Articles[i].createdAt %></p>
    
            <hr>
    
            <!-- Preview Image -->
            <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
    
            <hr>
    
            <!-- Post Content -->
            <p class="lead"><%= article.Articles[i].content %></p>
            <hr>
            
         </div>
       </div>
  </div>
    <%}%>
     <% }); %>        
<% include ../partials/footer %>