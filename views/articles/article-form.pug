extends ../layout 

block content

 .form
  h3 Add new article
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='title') Title
      .col-sm-8
        input.form-control(type='text', name='title', id='title', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='Category') Category
      .col-sm-8
        input.form-control(type='text', name='category', id='category', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='content') Content
      .col-sm-8
        textarea.form-control(name='content', id='content', rows='8', cols='50')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit') Add article 
          i.fa.fa-plus-square